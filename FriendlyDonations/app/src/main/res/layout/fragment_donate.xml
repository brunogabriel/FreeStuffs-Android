<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/view_space_vertical"
            tools:ignore="MissingPrefix"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:id="@+id/tvUploadPhotos"
            android:text="@string/donate_fragment_upload_photos"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/view_space_horizontal"
            android:layout_marginRight="@dimen/view_space_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewPictures"
            android:layout_marginTop="@dimen/space_between_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_marginTop="@dimen/view_space_vertical"
            android:id="@+id/tvSelectCategory"
            tools:ignore="MissingPrefix"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:text="@string/donate_fragment_choose_category"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/view_space_horizontal"
            android:layout_marginRight="@dimen/view_space_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewCategories"
            android:layout_marginTop="@dimen/space_between_views"
            android:minHeight="@dimen/card_category_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/view_space_vertical"
            android:layout_marginLeft="@dimen/view_space_horizontal"
            android:layout_marginRight="@dimen/view_space_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                app:theme="@style/FriendlyDonationsTheme.FloatingEditText"
                app:hintTextAppearance="@style/FriendlyDonationsTheme.FloatingEditText.Hint"
                android:id="@+id/tiProductItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/etProductItemTitle"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/donate_fragment_product_item_title" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/view_space_vertical"
                android:id="@+id/tiDescription"
                app:theme="@style/FriendlyDonationsTheme.FloatingEditText"
                app:hintTextAppearance="@style/FriendlyDonationsTheme.FloatingEditText.Hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/donate_fragment_description" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/view_space_vertical"
                android:id="@+id/tiLocation"
                app:theme="@style/FriendlyDonationsTheme.FloatingEditText"
                app:hintTextAppearance="@style/FriendlyDonationsTheme.FloatingEditText.Hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <br.com.friendlydonations.views.widgets.SelectEditText
                    android:id="@+id/locationSelectET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/donate_fragment_location"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/view_space_vertical"
                android:id="@+id/tiDelivery"
                app:theme="@style/FriendlyDonationsTheme.FloatingEditText"
                app:hintTextAppearance="@style/FriendlyDonationsTheme.FloatingEditText.Hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <br.com.friendlydonations.views.widgets.SelectEditText
                    android:id="@+id/deliverySelectET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_spinner_arrow"
                    android:drawableRight="@drawable/ic_spinner_arrow"
                    android:hint="@string/donate_fragment_delivery"
                    />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:textColor="@color/colorTitle"
                android:id="@+id/tvIWouldGetTouch"
                android:text="@string/donate_fragment_get_touch"
                style="@style/TextView.Typeface3"
                android:layout_marginTop="@dimen/card_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="@dimen/view_space_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/viewGetByMail"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    layout="@layout/checkbox_touchdonate"
                    />

                <include
                    android:id="@+id/viewGetByPhone"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    layout="@layout/checkbox_touchdonate"
                    android:layout_marginLeft="@dimen/card_padding"
                    />

            </LinearLayout>

        </LinearLayout>

        <!-- Donate Button -->
        <LinearLayout
            android:clickable="true"
            android:id="@+id/viewDonatedBtn"
            android:gravity="center"
            android:layout_marginTop="@dimen/double_view_space_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/drawable_green_effect"
            android:layout_height="80dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvDonateText"
                android:drawableRight="@drawable/ic_donation_tab"
                tools:ignore="MissingPrefix"
                android:drawablePadding="@dimen/space_between_views"
                fontPath="fonts/Montserrat-Regular.ttf"
                style="@style/TextView.Typeface3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/donate_detail_im_interested"
                android:gravity="center" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>