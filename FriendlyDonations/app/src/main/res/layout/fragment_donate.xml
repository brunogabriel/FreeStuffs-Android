<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/MontserratRegular.20sp.ColorTitle"
            android:id="@+id/upload_photos_text"
            android:layout_marginTop="@dimen/double_view_space_vertical"
            android:layout_marginRight="@dimen/view_space_horizontal"
            android:layout_marginLeft="@dimen/view_space_horizontal"
            android:text="@string/donate_upload_your_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pictures_recycler_view"
            android:layout_marginTop="@dimen/view_space_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <TextView
            style="@style/MontserratRegular.20sp.ColorTitle"
            android:layout_marginTop="@dimen/double_view_space_vertical"
            android:layout_marginRight="@dimen/view_space_horizontal"
            android:layout_marginLeft="@dimen/view_space_horizontal"
            android:text="@string/donate_select_a_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/categories_recycler_view"
            android:layout_marginTop="@dimen/view_space_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <!-- Form -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="@dimen/view_space_horizontal"
            android:layout_marginLeft="@dimen/view_space_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/item_title_layout"
                app:theme="@style/FriendlyDonationsTheme.FloatingEditText"
                app:hintTextAppearance="@style/FriendlyDonationsTheme.FloatingEditText.Hint"
                android:layout_marginTop="@dimen/double_view_space_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    style="@style/MontserratRegular.20sp.ColorTitle"
                    android:id="@+id/item_title_input"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/donate_hint_item_title" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/description_layout"
                app:theme="@style/FriendlyDonationsTheme.FloatingEditText"
                app:hintTextAppearance="@style/FriendlyDonationsTheme.FloatingEditText.Hint"
                android:layout_marginTop="@dimen/double_view_space_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    style="@style/MontserratRegular.20sp.ColorTitle"
                    android:id="@+id/description_input"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/donate_hint_description" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/location_layout"
                app:theme="@style/FriendlyDonationsTheme.FloatingEditText"
                app:hintTextAppearance="@style/FriendlyDonationsTheme.FloatingEditText.Hint"
                android:layout_marginTop="@dimen/double_view_space_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    style="@style/MontserratRegular.20sp.ColorTitle"
                    android:id="@+id/location_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/donate_hint_location" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <!-- End form -->
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>