<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="156dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="0dp"
    android:clickable="true"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="156dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/donation_image"
            android:background="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="118dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_semi_space" />

        <TextView
            android:id="@+id/donation_title"
            android:layout_marginLeft="@dimen/material_semi_space"
            android:layout_marginRight="@dimen/material_semi_space"
            android:text="Brand new ladies bike 29 wheel"
            style="@style/CardDonationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_semi_space" />

        <TextView
            android:id="@+id/donation_location"
            style="@style/CardDonationSubtitle"
            android:text="Manchester City - Lorem Ipsum England"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/material_semi_space"
            android:layout_marginRight="@dimen/material_semi_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_semi_space" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_semi_space"
            android:layout_marginRight="@dimen/material_semi_space"
            android:orientation="horizontal">

            <!-- Column 1 -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/donate_distance"
                    style="@style/CardDonationSubtitle"
                    android:text="2.1 KM"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:drawableLeft="@drawable/ic_location_on"
                    android:drawableTint="@color/colorSubtitle"
                    android:drawablePadding="@dimen/material_semi_space"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Column 2 -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/donate_comments"
                    android:text="2.1 KM"
                    style="@style/CardDonationSubtitle"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:drawableLeft="@drawable/ic_message"
                    android:drawableTint="@color/colorSubtitle"
                    android:drawablePadding="@dimen/material_semi_space"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_space" />

    </LinearLayout>

</android.support.v7.widget.CardView>
