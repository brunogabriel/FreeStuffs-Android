<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBrown"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/view_space_vertical"
    android:paddingBottom="@dimen/view_space_vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:layout_marginTop="@dimen/card_padding"
        android:gravity="center_horizontal"
        android:textSize="@dimen/profile_username"
        android:layout_marginLeft="64dp"
        android:textColor="@color/colorGrayLight"
        android:layout_marginRight="64dp"
        android:text="Marconi Loura Oliveira"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/space_between_views"
        android:layout_marginBottom="@dimen/space_between_views"
        android:minWidth="250dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textSize="@dimen/dimen_typeface2"
        fontPath="fonts/Roboto-Light.ttf"
        android:text="@string/profile_fragment_preferences"
        android:textColor="@color/colorGrayLight"
        android:layout_height="40dp"
        android:id="@+id/tvPreferences" />

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:paddingBottom="@dimen/view_space_vertical"
        android:layout_height="wrap_content">

        <!-- Left Text -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="47.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorGraySemiLight"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:text="50"
                android:textSize="@dimen/profile_number_donations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatTextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorGraySemiLight"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:textSize="@dimen/profile_donations_description"
                android:text="@string/profile_fragment_donations_done"
                android:layout_width="wrap_content"
                android:layout_height="56dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <View
                android:layout_gravity="center"
                android:background="@color/colorGraySemiLight"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <!-- Right View -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="47.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorGraySemiLight"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:text="50"
                android:textSize="@dimen/profile_number_donations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatTextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorGraySemiLight"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:textSize="@dimen/profile_donations_description"
                android:text="@string/profile_fragment_donations_received"
                android:layout_width="wrap_content"
                android:layout_height="56dp" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>