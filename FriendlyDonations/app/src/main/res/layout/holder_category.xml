<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_space"
    android:orientation="vertical">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_layout"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="@dimen/category_height"
        android:layout_height="@dimen/category_height">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image_view"
            android:layout_width="@dimen/category_height"
            android:layout_height="@dimen/category_height" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:alpha="0.5"
            android:src="@color/colorBlack"
            android:layout_width="@dimen/category_height"
            android:layout_height="@dimen/category_height"/>

        <RelativeLayout
            android:layout_gravity="right"
            android:visibility="gone"
            android:background="@drawable/background_circle_accept"
            android:id="@+id/check_marker"
            android:layout_width="24dp"
            android:layout_height="24dp">

            <ImageView
                android:gravity="center"
                android:src="@drawable/ic_done"
                android:tint="@color/colorWhite"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/category_name"
            android:layout_margin="3dp"
            android:gravity="center"
            android:layout_gravity="center"
            style="@style/CardCategoryStyle"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</LinearLayout>
