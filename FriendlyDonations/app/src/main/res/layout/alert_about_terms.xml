<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- title -->
    <android.support.v7.widget.AppCompatTextView
        android:layout_marginLeft="@dimen/card_padding"
        android:layout_marginRight="@dimen/card_padding"
        android:layout_marginTop="@dimen/card_padding"
        android:id="@+id/tvAlertTitle"
        android:gravity="center_vertical"
        android:minHeight="@dimen/text_view_height"
        android:textSize="@dimen/dimen_typeface5"
        android:textColor="@color/colorParagraph"
        android:text="@string/login_alert_about_title"
        fontPath="fonts/Roboto-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Bottom Layout -->
    <LinearLayout
        android:gravity="right"
        android:textColor="@color/colorSubtitle"
        android:orientation="horizontal"
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvRefuse"
            android:textColor="@color/colorSubtitle"
            android:textAllCaps="true"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/card_padding"
            android:textSize="@dimen/dimen_typeface2"
            android:minWidth="88dp"
            android:text="@string/login_alert_about_refuse"
            fontPath="fonts/Roboto-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvAccept"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="true"
            android:gravity="center"
            android:clickable="true"
            android:layout_marginRight="@dimen/view_space_horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:minWidth="88dp"
            android:layout_gravity="center"
            android:text="@string/login_alert_about_accept"
            android:textSize="@dimen/dimen_typeface2"
            fontPath="fonts/Roboto-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!-- Center Scroll -->
    <ScrollView
        android:layout_marginBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvAlertTitle"
        android:layout_alignLeft="@+id/tvAlertTitle"
        android:layout_alignStart="@+id/tvAlertTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvContentAlert"
                fontPath="fonts/Roboto-Regular.ttf"
                android:paddingBottom="@dimen/text_view_height"
                android:layout_marginRight="@dimen/view_space_horizontal"
                android:textSize="@dimen/dimen_typeface3"
                android:text="@string/lorem_phrase_too_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

    <View
        android:layout_above="@+id/bottomLayout"
        android:background="@drawable/drawable_white_gradient_effect"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

</RelativeLayout>