<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|clip_vertical|clip_horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width ="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/material_space"
            android:layout_marginLeft="@dimen/material_space"
            android:layout_marginRight="@dimen/material_space" >

            <TextView
                android:id="@+id/try_again_text"
                android:text="@string/unable_load_data"
                style="@style/SimpleParagraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/material_space" />

            <Button
                android:id="@+id/try_again_button"
                style="@style/ButtonPrimaryStyle"
                android:paddingLeft="@dimen/material_space"
                android:paddingRight="@dimen/material_space"
                android:background="@drawable/drawable_ripple_hover"
                android:text="@string/try_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>