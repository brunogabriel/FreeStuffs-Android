<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Global Theme -->
    <style name="FriendlyDonationsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <!-- Translucent -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- ProgressDialog color -->
    <style name="FriendlyDonationsTheme.ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="FriendlyDonationsTheme.NotTranslucent" parent="FriendlyDonationsTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="FriendlyDonationsTheme.NavigationNotTranslucent" parent="FriendlyDonationsTheme">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="FriendlyDonationsTheme.FloatingEditText" parent="FriendlyDonationsTheme">
        <item name="android:colorControlNormal">@color/colorSubtitle</item>          <!-- Line Bottom Deactivated -->
        <item name="android:colorControlActivated">@color/colorTitle</item>       <!-- Line Bottom Actived -->
        <item name="android:textColorHighlight">@color/colorGraySemiLight</item>     <!-- Text Selected to Copy -->
        <item name="android:textColorHint">@color/colorSubtitle</item>               <!-- Color Hint Not Actived -->
        <item name="android:textColorPrimary">@color/colorTitle</item>            <!-- Text Inserted -->
    </style>

    <style name="FriendlyDonationsTheme.FloatingEditText.Hint" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorSubtitle</item>
        <item name="android:colorAccent">@color/colorTitle</item>
        <item name="android:colorControlNormal">@color/colorSubtitle</item>
        <item name="android:colorControlActivated">@color/colorTitle</item>
    </style>

</resources>