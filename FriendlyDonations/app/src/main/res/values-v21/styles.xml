<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme. -->
    <style name="FriendlyDonationsTheme" parent="FriendlyDonations.Base">
        <!-- Customize your theme here. -->
    </style>

    <!-- Default application theme -->
    <style name="FriendlyDonations.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- <item name="android:typeface">serif</item> -->

        <!-- EditText Style -->
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>

        <!-- Translucent -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Default application theme -->
    <style name="FriendlyDonations.BaseNotTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- <item name="android:typeface">serif</item> -->

        <!-- EditText Style -->
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>
</resources>