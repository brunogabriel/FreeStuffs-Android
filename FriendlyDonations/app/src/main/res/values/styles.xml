<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Global Theme -->
    <style name="FriendlyDonationsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>
    
    <!-- ProgressDialog color -->
    <style name="FriendlyDonationsTheme.ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="FriendlyDonationsTheme.NotTranslucent" parent="FriendlyDonationsTheme">
        <!-- Stub v21 -->
    </style>

    <style name="FriendlyDonationsTheme.NavigationNotTranslucent" parent="FriendlyDonationsTheme">
        <!-- Stub v21 -->
    </style>

    <style name="FriendlyDonationsTheme.FloatingEditText" parent="FriendlyDonationsTheme">
        <item name="colorControlNormal">@color/colorSubtitle</item>          <!-- Line Bottom Deactivated -->
        <item name="colorControlActivated">@color/colorTitle</item>       <!-- Line Bottom Actived -->
        <item name="android:textColorHighlight">@color/colorDisabled</item>     <!-- Text Selected to Copy -->
        <item name="android:textColorHint">@color/colorSubtitle</item>               <!-- Color Hint Not Actived -->
        <item name="android:textColorPrimary">@color/colorTitle</item>            <!-- Text Inserted -->
    </style>

    <style name="FriendlyDonationsTheme.FloatingEditText.Hint" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorSubtitle</item>
        <item name="colorAccent">@color/colorTitle</item>
        <item name="colorControlNormal">@color/colorSubtitle</item>
        <item name="colorControlActivated">@color/colorTitle</item>
    </style>

    <style name="ExpandedDonationBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>